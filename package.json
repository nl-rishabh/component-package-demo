    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.28",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "tsup": "^7.2.0",
